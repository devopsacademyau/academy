COMMIT_SHA ?= $(shell git rev-parse --short HEAD)
AUTHOR ?= Alan Lima
DOCKER_REPO ?= alanrlima
IMAGE_NAME ?= make01

.PHONY: build
build:
	@echo "  ğŸš€ Creating index.html"
	@echo "This image was created by '$(AUTHOR)', based on the '${COMMIT_SHA}'" >> index.html
	@echo "  ğŸ’ª Building image $(IMAGE_NAME):${COMMIT_SHA}"
	docker build -t $(IMAGE_NAME):${COMMIT_SHA} .
	@echo "  âŒ Deleting index.html"
	@rm index.html
	@echo "  âœ… All done"

.PHONY: run
run:
	@echo " ğŸƒâ€â™‚ï¸ Run boy run... Ops running the image on port ${PORT} ğŸ™„"
	docker run -dp ${PORT}:80 $(IMAGE_NAME):$(COMMIT_SHA)
	@echo " âœ… The server is running under ğŸ”¥ğŸ”¥ğŸ”¥ğŸ”¥ğŸ”¥ "
	curl http://localhost:$(PORT)

.PHONY: push
push: 
	@echo " ğŸš€ğŸš€ Pushing image to the Space ğŸŒŒğŸŒŒ ... Ops to Docker Hub ğŸ³"
	@docker tag $(IMAGE_NAME):$(COMMIT_SHA) $(DOCKER_REPO)/$(IMAGE_NAME):$(COMMIT_SHA)
	docker push $(DOCKER_REPO)/$(IMAGE_NAME):$(COMMIT_SHA)
	@echo "  âœ… All done"

.PHONY: commit_hash
commit_hash:
	@git rev-parse --short HEAD

	